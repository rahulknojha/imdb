<br>
<font size=5>
	<%= link_to 'Home', movies_url %> / Movies
</font>
<br><br>
<center>
<div class=table-hover>
	<table style='max-width:1200px;' class=table border=2>
		<tr align=center>
			<th style="padding-left: 40px; width: 10%">Sr No.</th>
			<th style="padding-left: 260px; width: 50%;">MOVIES</th>
			<th style="padding-left: 180px;  width: 40%">&nbsp;&nbsp;Release date</th>
		</tr>

	<% @movies.order(release_date: :desc).each_with_index do |movie, index| %>
	  <tr>
	  	<td align=center><br><%= index+1 %></td>
			<td style="padding-left: 170px;">
				<% if movie.poster.attached? %>
					<%= image_tag movie.poster, width: 60, height: 80 %>
				<% else %>
					<%= image_tag ('default.jpg'), width: 60, height: 80 %>
			    <!--<%= image_tag ('default.jpg'), class: "img-responsive", width: 60, height: 80 %>-->
				<% end %> &emsp;&emsp;
				<%= link_to movie.title, movie_url(movie) %>
			</td>
			<td align=center><br><%= movie.release_date.strftime('%d  %B  %Y') %></td>
		</tr>
	<% end %>
	</table>
</div>
<br><br><br>
<%= link_to '<button type="button" class="btn-success btn-lg">New Movie</button>'.html_safe, new_movie_url%>
</center>